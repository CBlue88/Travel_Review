@model IEnumerable<TravelReview.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Travel Board</h2>
<h3> Post on our board of your travels: leave a message, story, restaurant tips, whatever you want!</h3>



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">

                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Category.Name)</h3>
                   <h4>@Html.DisplayFor(modelItem => item.Title)</h4> 
                   <h5> @Html.DisplayFor(modelItem => item.Content)</h5>
                   <h6>@Html.DisplayFor(modelItem => item.PublishedDate)</h6>
                    @*<p><a href="#" class="btn btn-primary" role="button">Details</a>*@
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn-btn-primary", role = "button" }) <!--this is calling a specific item in the details for a specific items. -->
                    @*@Html.ActionLink("Details", "Details", new { id = item.ID }) |*@


                </div>
            </div>
        </div>

    }
</div>



